# RISE CRM - CodeIgniter 4 Project
# .gitignore file

# Environment files
.env
.env.*
!.env.example

# Configuration files with sensitive data
# Note: Rise.php is required for the application to function

# Writable directories
writable/cache/*
writable/logs/*
writable/session/*
writable/uploads/*
writable/debugbar/*
!writable/cache/.gitkeep
!writable/logs/.gitkeep
!writable/session/.gitkeep
!writable/uploads/.gitkeep
!writable/debugbar/.gitkeep

# Temporary files
files/temp/*
!files/temp/.gitkeep

# Database files
*.sql
!install/database.sql
*.db

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Composer
composer.phar
vendor/
composer.lock

# Node modules (if any frontend build tools)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Backup files
*.bak
*.backup
*.old

# Log files
*.log

# Cache files
*.cache

# Session files
sess_*

# Uploaded files (user content)
files/profile_images/*
files/project_files/*
files/timeline_files/*
!files/profile_images/.gitkeep
!files/project_files/.gitkeep
!files/timeline_files/.gitkeep

# System files
files/system/*
!files/system/.gitkeep

# Installation files (remove after setup)
# Note: install/ directory is needed for database setup
