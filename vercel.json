{
  "version": 2,
  "name": "rise-crm",
  "buildCommand": "echo 'PHP build completed'",
  "outputDirectory": ".",
  "functions": {
    "api/*.php": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/files/(.*)",
      "dest": "/files/$1"
    },
    {
      "src": "/health",
      "dest": "/api/health.php"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.php"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "CI_ENVIRONMENT": "production",
    "AWS_ACCESS_KEY_ID": "YOUR_AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY": "YOUR_AWS_SECRET_ACCESS_KEY",
    "AWS_REGION": "us-west-2",
    "S3_BUCKET": "rise-crm-storage-shreyas",
    "S3_REGION": "us-west-2",
    "RDS_ENDPOINT": "YOUR_RDS_ENDPOINT",
    "RDS_DATABASE": "rise_crm",
    "RDS_USERNAME": "YOUR_RDS_USERNAME",
    "RDS_PASSWORD": "YOUR_RDS_PASSWORD",
    "RDS_PORT": "3306"
  }
}
